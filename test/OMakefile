# .PHONY: all install clean

# .SUBDIRS:

CXXFLAGS += $(shell cppunit-config --cflags)
LDFLAGS += $(shell cppunit-config --libs)
LIBS += $(SRCDIR)/libares

CXXFILES[] =
   $(removesuffix $(ls test_*.cpp))
   testmain

MAIN = test

test.sqlite:
	ln -s ../ares.sqlite

.DEFAULT: $(CXXProgram $(MAIN), $(CXXFILES)) test.sqlite
